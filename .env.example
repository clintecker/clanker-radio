# ============================================================================
# LAST BYTE RADIO - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# Location: /srv/ai_radio/.env (production) or project root (development)
#
# REQUIRED values are marked with **REQUIRED**
# Optional values have sensible defaults

# ============================================================================
# BASE CONFIGURATION
# ============================================================================
RADIO_BASE_PATH=/srv/ai_radio
# IANA timezone (e.g., America/New_York, America/Los_Angeles, Europe/London, UTC)
RADIO_STATION_TZ=UTC

# ============================================================================
# STATION IDENTITY
# ============================================================================
# Examples shown are from "LAST BYTE RADIO" station
RADIO_STATION_NAME="Your Station Name"
RADIO_STATION_LOCATION="Your City"

# ============================================================================
# LOCATION FOR WEATHER (**REQUIRED**)
# ============================================================================
# Find your coordinates at: https://www.latlong.net/
# Example: Chicago = 41.8781, -87.6298
# Example: New York = 40.7128, -74.0060
# Example: Los Angeles = 34.0522, -118.2437
RADIO_STATION_LAT=0.0
RADIO_STATION_LON=0.0

# ============================================================================
# API KEYS (**REQUIRED** FOR PRODUCTION)
# ============================================================================

# Anthropic Claude - For news/weather script generation
# Get your key at: https://console.anthropic.com/
# Format: sk-ant-api03-...
RADIO_LLM_API_KEY=your-anthropic-api-key-here

# Claude model selection (default: claude-3-5-sonnet-latest)
# Options: claude-3-5-sonnet-latest, claude-3-opus-latest, claude-3-haiku-latest
RADIO_LLM_MODEL=claude-3-5-sonnet-latest

# ============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# ============================================================================

# TTS Provider: "gemini" (recommended) or "openai"
RADIO_TTS_PROVIDER=gemini

# -----------------------------------------------------------------------------
# Option 1: Google Gemini TTS (RECOMMENDED - more natural voices)
# -----------------------------------------------------------------------------
# Get your key at: https://aistudio.google.com/apikey
# Format: AIza...
RADIO_GEMINI_API_KEY=your-gemini-api-key-here

# Gemini TTS model (default: gemini-2.5-pro-preview-tts)
# Options: gemini-2.5-pro-preview-tts, gemini-2.5-flash-preview-tts
RADIO_GEMINI_TTS_MODEL=gemini-2.5-pro-preview-tts

# Gemini voice name (default: Kore)
# Options: Kore, Puck, Charon, Aoede, Fenrir
# Test voices at: https://ai.google.dev/gemini-api/docs/text-to-speech
RADIO_GEMINI_TTS_VOICE=Kore

# -----------------------------------------------------------------------------
# Option 2: OpenAI TTS (fallback, if not using Gemini)
# -----------------------------------------------------------------------------
# Get your key at: https://platform.openai.com/api-keys
# Format: sk-...
# RADIO_TTS_API_KEY=your-openai-api-key-here

# OpenAI voice (default: alloy)
# Options: alloy, echo, fable, onyx, nova, shimmer
# RADIO_TTS_VOICE=alloy

# ============================================================================
# NATIONAL WEATHER SERVICE CONFIGURATION (**REQUIRED** FOR WEATHER)
# ============================================================================
# Find your grid coordinates:
# 1. Go to: https://www.weather.gov/
# 2. Enter your location
# 3. Click on the map
# 4. Check the URL: /gridpoint/OFFICE/X,Y
#
# Examples:
# - Chicago = LOT/76,73
# - New York = OKX/33,37
# - Los Angeles = LOX/154,45
RADIO_NWS_OFFICE=YOUR_OFFICE
RADIO_NWS_GRID_X=0
RADIO_NWS_GRID_Y=0

# ============================================================================
# NEWS RSS FEEDS (Optional - customize your news sources)
# ============================================================================
# Default feeds are configured in src/ai_radio/config.py
# To override, provide a JSON object with categories:
#
# RADIO_NEWS_RSS_FEEDS='{"local": ["https://your-local-news.com/feed"], "national": ["https://npr.org/rss"], "tech": ["https://arstechnica.com/feed"]}'
#
# Leave commented to use defaults (Chicago-focused + national/tech news)

# ============================================================================
# CONTENT GENERATION SETTINGS (Optional - defaults are fine)
# ============================================================================

# Script generation temperature (0.0=deterministic, 1.0=creative)
RADIO_WEATHER_SCRIPT_TEMPERATURE=0.8
RADIO_NEWS_SCRIPT_TEMPERATURE=0.6

# Hallucinated news (cyberpunk dystopian flavor)
# Set to false to only use real RSS news
RADIO_HALLUCINATE_NEWS=true
RADIO_HALLUCINATION_CHANCE=1.0  # 0.0-1.0 probability

# ============================================================================
# AUDIO SETTINGS (Optional - defaults are production-tested)
# ============================================================================

# Music artist attribution (all ingested music will be tagged with this artist)
RADIO_MUSIC_ARTIST="Your Artist Name"

# Background bed volume (default: -18.0 dB)
RADIO_BED_VOLUME_DB=-18.0

# Bed timing (ride in/out around voice)
RADIO_BED_PREROLL_SECONDS=3.0   # Bed starts before voice
RADIO_BED_FADEIN_SECONDS=2.0    # Fade-in duration
RADIO_BED_POSTROLL_SECONDS=5.4  # Bed continues after voice
RADIO_BED_FADEOUT_SECONDS=3.0   # Fade-out duration

# Break freshness threshold (minutes)
RADIO_BREAK_FRESHNESS_MINUTES=50

# ============================================================================
# ANNOUNCER PERSONALITY (Optional - advanced customization)
# ============================================================================
# See CONFIGURATION.md for detailed personality customization options

# Energy level (1-10, cap at 8-9 for radio, never 10)
RADIO_ENERGY_LEVEL=8

# Vibe keywords (3-5 keywords defining personality)
RADIO_VIBE_KEYWORDS="witty, darkly humorous, fast, slightly unhinged, defiant, cyberpunk survivor"

# Chaos budget (prevents cringe overload)
RADIO_MAX_RIFFS_PER_BREAK=1
RADIO_MAX_EXCLAMATIONS_PER_BREAK=2
RADIO_UNHINGED_PERCENTAGE=20  # % of segment that can be 'unhinged'

